{
    "type": "APL",
    "version": "1.3",
    "theme": "dark",
    "resources": [],
    "styles": {
        "buttonTextStyle" : { 
           "values" : { 
                 "color" : "white" , 
                 "textAlign" : "center" , 
                 "textAlignVertical" : "center" , 
                 "fontSize" : 100  , 
                 "width" : "100%" , 
                 "height" : "100%"
           } 
        } 
    },
    "layouts": {
        "button" : 
        { 
            "parameters" : [ 
                "action" , 
                "sourceId" , 
                "text" , 
                { 
                    "name" : "backgroundColor" ,
                    "default" : "#0000CC" 
                }, 
                { 
                    "name" : "eventArgs" , 
                    "type" : "array" 
                },                 
                { 
                    "name" : "width"  , 
                    "default" : "30vw" 
                } , 
                { 
                    "name" : "height"  , 
                    "default" : "20vh" 
                },                  
                { 
                    "name" : "textStyle"  , 
                    "default" : "buttonTextStyle" 
                }                  
            ], 
            "item" : 
            { 
                "type": "Frame",
                "backgroundColor" : "${backgroundColor}" ,               
                "width" : "${width}" , 
                "height" : "${height}" , 
                "borderRadius" : "20" , 
                "item":  
                { 
                    "type": "TouchWrapper",
                    "width" : "100%" , 
                    "height" : "100%" , 
                    "onPress":  
                        [  
                            {
                                "type": "SendEvent" ,
                                "arguments" :  [ 
                                     "${sourceId}" , 
                                     "${action}"  
                                ]
                            }, 
                            {
                                    "type" : "SetValue" , 
                                    "componentId" : "operation" , 
                                    "property" : "text" , 
                                    "value" : "${eventArgs[1]}"
                            } ,                              
                            {
                                "type": "SendEvent" ,
                                "arguments" :  "${eventArgs}" 
                            }
                    ] , 
                    "item" : {  
                                "type" : "Text" , 
                                "style" : "${textStyle}" , 
                                "text" : "${text}", 
                                "width" : "100%" 
                    }               
                }
            }
        } 
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type" : "Container" , 
                "direction" : "row" , 
                "justifyContent" : "center" ,                 
                "width" : "100vw", 
                "height" : "100vh" , 
                "items" : [
                    {
                            "type" : "Frame" , 
                            "backgroundColor" : "gray" , 
                            "width" : "100%" , 
                            "height" : "100%", 
                            "position": "absolute"
                            
                    }, 
                    { 
                    "type" : "Container" , 
                    "direction" : "column" , 
                    "justifyContent" : "center" ,                 
                    "width" : "40vw", 
                    "height" : "100vh" , 
                    "paddingLeft" : "50" , 
                    "paddingRight" : "50" , 
                    "items" : [ 
                        { 
                            "type" : "button" , 
                            "style" : "greenButtonStyle", 
                            "sourceId" : "button01" , 
                            "textStyle" : "buttonTextStyle" , 
                            "text" : "+" , 
                            "width" : "100%" , 
                            "height" : "20vh", 
                            "action" : "increase"  , 
                            "eventArgs" : [ 
                                "source:button01" ,  
                                "operation:increase"
                            ]
                        } ,
                        { 
                            "type" : "button" ,
                            "style" : "greenButtonStyle", 
                            "sourceId" : "button02" , 
                            "textStyle" : "buttonTextStyle" , 
                            "text" : "-" , 
                            "width" : "100%" , 
                            "height" : "20vh", 
                            "spacing" : "10vh", 
                            "action" : "decrease" ,
                            "eventArgs" : [ 
                                "source:button02" ,  
                                "operation:decrease"
                            ]
                        } 
                    ] 
                    }, 
                    { 
                    "type" : "Container" , 
                    "direction" : "column" , 
                    "justifyContent" : "center" ,                 
                    "width" : "40vw", 
                    "height" : "100vh" , 
                    "paddingLeft" : "50" , 
                    "paddingRight" : "50" , 
                    "items" : [ 
                        { 
                            "type" : "TouchWrapper" , 
                            "width": "100%", 
                            "height" : "50%", 
                             "item" : { 
                                 "type" : "Image" , 
                                 "source" : "https://aplsnippets.s3.amazonaws.com/assets/images/cat-round.png", 
                                 "width": "100%" , 
                                 "height" : "100%"
                             }, 
                             "onPress":  
                            [  
                                {
                                    "type": "SendEvent" ,
                                    "arguments" :  [ 
                                         "cat image was pressed"                                           
                                    ]
                                }, 
                                {
                                        "type" : "SetValue" , 
                                        "componentId" : "operation" , 
                                        "property" : "text" , 
                                        "value" : "image press"
                                } 
                            ] 
                        }
                    ] 
                    }, 
                    { 
                        "id" : "operation" , 
                        "type" : "Text" , 
                        "textAlign" : "center" , 
                        "text" : "${payload.currentValue}"   , 
                        "position" : "absolute",  
                        "bottom" : "10vh"
                    }  
                ]
            }
        ]
    }
}